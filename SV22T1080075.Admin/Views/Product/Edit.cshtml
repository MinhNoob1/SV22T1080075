@model Product
@{
    ViewBag.Title = Model.ProductID == 0 ? "Bổ sung mặt hàng" : "Cập nhật thông tin mặt hàng";
}

<div class="box box-primary">

    <div class="box-header with-border">
        <h3 class="box-title">Thông tin mặt hàng</h3>
    </div>

    <div class="box-body">
        <form class="form-horizontal" method="post" enctype="multipart/form-data">

            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ProductID" />
            <input type="hidden" asp-for="Photo" />

            <!-- Tên mặt hàng -->
            <div class="form-group">
                <label class="control-label col-sm-2">Tên mặt hàng:</label>
                <div class="col-sm-10">
                    <input asp-for="ProductName" class="form-control" autofocus />
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
            </div>

            <!-- Mô tả -->
            <div class="form-group">
                <label class="control-label col-sm-2">Mô tả:</label>
                <div class="col-sm-10">
                    <textarea asp-for="ProductDescription" class="form-control" rows="3"></textarea>
                </div>
            </div>

            <!-- Loại hàng -->
            <div class="form-group">
                <label class="control-label col-sm-2">Loại hàng:</label>
                <div class="col-sm-10">
                    <select asp-for="CategoryID" class="form-control" asp-items="ViewBag.Categories">
                        <option value="">-- Loại hàng --</option>
                    </select>
                    <span asp-validation-for="CategoryID" class="text-danger"></span>
                </div>
            </div>

            <!-- Nhà cung cấp -->
            <div class="form-group">
                <label class="control-label col-sm-2">Nhà cung cấp:</label>
                <div class="col-sm-10">
                    <select asp-for="SupplierID" class="form-control" asp-items="ViewBag.Suppliers">
                        <option value="">-- Nhà cung cấp --</option>
                    </select>
                </div>
            </div>

            <!-- Đơn vị tính -->
            <div class="form-group">
                <label class="control-label col-sm-2">Đơn vị tính:</label>
                <div class="col-sm-10">
                    <input asp-for="Unit" class="form-control" />
                </div>
            </div>

            <!-- Giá hàng -->
            <div class="form-group">
                <label class="control-label col-sm-2">Giá hàng:</label>
                <div class="col-sm-10">
                    <input asp-for="Price" class="form-control" />
                </div>
            </div>

            <!-- Bị ngừng bán -->
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <div class="checkbox">
                        <label>
                            <input asp-for="IsSelling" type="checkbox" /> Hiện đang được bán
                        </label>
                    </div>
                </div>
            </div>

            <!-- File ảnh -->
            <div class="form-group">
                <label class="control-label col-sm-2">Ảnh minh họa:</label>
                <div class="col-sm-10">
                    <input type="file" name="uploadPhoto" class="form-control" accept="image/*"
                           onchange="document.getElementById('Preview').src = window.URL.createObjectURL(this.files[0])" />
                </div>
            </div>

            <!-- Ảnh preview -->
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <img id="Preview" src="~/images/products/@Model.Photo" class="img img-bordered" style="width:200px" />
                </div>
            </div>

            <!-- Buttons -->
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">
                        <i class="fa fa-save"></i> Lưu dữ liệu
                    </button>
                    <a class="btn btn-warning" href="~/Product">
                        Quay lại
                    </a>
                </div>
            </div>

        </form>
    </div>
</div>

<!-- =================== THƯ VIỆN ẢNH =================== -->

<div class="box box-info">
    <div class="box-header with-border">
        <h3 class="box-title">Thư viện ảnh</h3>
    </div>

    <div class="box-body">

        <table class="table table-bordered table-hover">
            <thead>
                <tr class="bg-gray">
                    <th>Ảnh</th>
                    <th>Mô tả</th>
                    <th>Thứ tự</th>
                    <th>Ẩn</th>
                    <th class="text-right">
                        <a class="btn btn-xs btn-primary" href="~/Product/Photo/@Model.ProductID?method=add">
                            <i class="fa fa-plus"></i>
                        </a>
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var photo in ViewBag.Photos)
                {
                    <tr>
                        <td><img src="~/images/products/@photo.Photo" style="width:100px" /></td>
                        <td>@photo.Description</td>
                        <td>@photo.DisplayOrder</td>
                        <td>@(photo.IsHidden ? "X" : "")</td>
                        <td class="text-right">
                            <a href="~/Product/Photo/@Model.ProductID?method=edit&photoId=@photo.PhotoID" class="btn btn-xs btn-primary">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="~/Product/Photo/@Model.ProductID?method=delete&photoId=@photo.PhotoID"
                               class="btn btn-xs btn-danger"
                               onclick="return confirm('Xóa ảnh này?')">
                                <i class="fa fa-remove"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

<!-- =================== THUỘC TÍNH SẢN PHẨM =================== -->

<div class="box box-info">

    <div class="box-header with-border">
        <h3 class="box-title">Thuộc tính mặt hàng</h3>
    </div>

    <div class="box-body">

        <table class="table table-bordered table-hover">
            <thead>
                <tr class="bg-gray">
                    <th>Tên thuộc tính</th>
                    <th>Giá trị</th>
                    <th>Thứ tự</th>
                    <th class="text-right">
                        <a class="btn btn-xs btn-primary" href="~/Product/Attribute/@Model.ProductID?method=add">
                            <i class="fa fa-plus"></i>
                        </a>
                    </th>
                </tr>
            </thead>

            <tbody>
                @foreach (var attr in ViewBag.Attributes)
                {
                    <tr>
                        <td>@attr.AttributeName</td>
                        <td>@attr.AttributeValue</td>
                        <td>@attr.DisplayOrder</td>
                        <td class="text-right">
                            <a class="btn btn-xs btn-primary"
                               href="~/Product/Attribute/@Model.ProductID?method=edit&attributeId=@attr.AttributeID">
                                <i class="fa fa-edit"></i>
                            </a>

                            <a class="btn btn-xs btn-danger"
                               href="~/Product/Attribute/@Model.ProductID?method=delete&attributeId=@attr.AttributeID"
                               onclick="return confirm('Xóa thuộc tính này?')">
                                <i class="fa fa-remove"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>

