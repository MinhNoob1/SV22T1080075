@model Supplier
@{
    ViewBag.Title = "Cập nhật thông tin nhà cung cấp";
}

<div class="box box-primary">
    <div class="box-body">
        <form action="~/Supplier/SaveData" method="post">
            <div class="form-group">
                <label>Tên nhà cung cấp:</label>
                <input type="text" class="form-control" autofocus asp-for="SupplierName">
                <span asp-validation-for="SupplierName"></span>
            </div>

            <div class="form-group">
                <label>Tên giao dịch:</label>
                <input type="text" class="form-control" asp-for="ContantName">
                <span asp-validation-for="ContantName"></span>
            </div>

            <div class="form-group">
                <label>Điện thoại:</label>
                <input type="text" class="form-control" asp-for="Phone">
                @Html.ValidationMessageFor(model => model.Phone)
            </div>

            <div class="form-group">
                <label>Email:</label>
                <input type="email" class="form-control" asp-for="Email">
                @Html.ValidationMessage(nameof(Model.Email));
            </div>

            <div class="form-group">
                <label>Địa chỉ:</label>
                <input type="text" class="form-control" asp-for="Andress">
                <span asp-validation-for="Andress"></span>
            </div>

            <div class="form-group">
                <label>Tỉnh/thành:</label>
                <select class="form-control" name="@nameof(Model.Province)">
                    @foreach (var province in await SV22T1080075.BusinessLayers.CommonDataServices.ProvinceDB.ListAsync())
                    {
                        if (province.ProvinceName == Model.Province)
                        {
                            <option value="@province.ProvinceName" selected>
                                @province.ProvinceName
                            </option>
                        }
                        else
                        {
                            <option value="@province.ProvinceName">
                                @province.ProvinceName
                            </option>
                        }
                    }
                </select>
            </div>

            <div class="form-group">
                @Html.ValidationMessage("Error")
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Supplier" class="btn btn-default">
                    Quay lại
                </a>
            </div>

        </form>

    </div>
</div>
