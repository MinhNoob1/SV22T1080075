@{
    ViewBag.Title = "Quản lý Nhà cung cấp";
}

<div class="box box-primary">
    <div class="box-body">
        <!-- Form nhập đầu vào tìm kiếm -->
        <form id="formSearch" action="#">
            <div class="input-group">
                <input name="searchValue" type="text" class="form-control"
                       placeholder="Nhập tên nhà cung cấp cần tìm">
                <div class="input-group-btn">
                    <button class="btn btn-info" type="submit">
                        <i class="glyphicon glyphicon-search"></i>
                    </button>
                    <a href="~/Supplier/Create" class="btn btn-primary" style="margin-left:5px">
                        <i class="fa fa-plus"></i> Bổ sung
                    </a>
                </div>
            </div>
        </form>

        <!-- Hiển thị kết quả tìm kiếm -->
        <div>
            <p style="margin:10px 0 10px 0">
                Có <strong>1,024</strong> nhà cung cấp trong tổng số <strong>100</strong> trang
            </p>

            <div class="table-responsive">
                <table class="table table-bordered table-hover table-striped">
                    <thead>
                        <tr class="bg-primary">
                            <th>Tên nhà cung cấp</th>
                            <th>Tên giao dịch</th>
                            <th>Điện thoại</th>
                            <th>Email</th>
                            <th>Địa chỉ</th>
                            <th>Tỉnh/thành</th>                            
                            <th style="width:80px"></th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int i = 1; i <= 10; i++)
                        {
                            <tr>
                                <td>Công ty TNHH Vô hạn</td>
                                <td>Vô hạn Ltd</td>
                                <td>0903555999</td>
                                <td>vohan@gmail.com</td>
                                <td>199 Nguyễn Huệ</td>
                                <td>Thừa Thiên Huế</td>                                
                                <td class="text-right">
                                    <a href="~/Supplier/Edit/123" class="btn btn-xs btn-info">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a href="~/Supplier/Delete/123" class="btn btn-xs btn-danger">
                                        <i class="fa fa-remove"></i>
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="text-center">
                <ul class="pagination">
                    <li><a href="#">1</a></li>
                    <li class="active"><a href="#">2</a></li>
                    <li><a href="#">3</a></li>
                    <li><a href="#">4</a></li>
                    <li><a href="#">5</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>