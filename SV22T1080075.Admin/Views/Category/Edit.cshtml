@model Category
@{
    ViewBag.Title = "Cập nhật thông tin loại hang";
}
<div class="box box-primary">
    <div class="box-body">
        <form action="~/Category/SaveData" method="post">

            <input type="hidden" name="@nameof(Model.CategoryID)" value="@Model.CategoryID" />

            <div class="form-group">
                <label>Tên loại hàng:</label>
                <input type="text" class="form-control" autofocus asp-for="CategoryName" />
                <span asp-validation-for="CategoryName"></span>
            </div>

            <div class="form-group">
                <label>Mô tả:</label>
                <input type="text" class="form-control" asp-for="Description" />
                <span asp-validation-for="Description"></span>
            </div>

            <div class="form-group text-right">
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-floppy-o"></i>
                    Lưu dữ liệu
                </button>
                <a href="~/Category" class="btn btn-default">
                    Quay lại
                </a>
            </div>

        </form>

    </div>
</div>
